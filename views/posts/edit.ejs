<% layout('layouts/boilerplate') -%>

<div class="row mt-5">
  <div class="col-md-6 offset-3">
    <h2>Edit Post</h2>
    <form action="/post/<%= post._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title: </label>
        <input
          type="text"
          name="post[title]"
          placeholder="title"
          class="form-control"
          id="title"
          value="<%= post.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="text" class="form-label">Text: </label>
        <textarea
          class="form-control"
          name="post[text]"
          id="text"
          placeholder="text"
        >
<%= post.text %></textarea
        >
      </div>
      <button class="btn btn-secondary mb-3">Submit</button>
    </form>
    <a href="/post/<%= post._id %>">Back to Post</a>
  </div>
</div>
